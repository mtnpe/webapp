@using WebApp.Models.BL.ProductBL
@model List<ProductDTO>

@{
    ViewBag.Title = "Product";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                if (!User.IsInRole("Staff"))
                                {
                                    <div class="card-header pb-0">
                                        <h3 class="card-title mt-2"><a asp-action="CreateProduct" type="button" class="btn btn-primary float-right"><i class="fas fa-plus"></i>  Add Product</a></h3>
                                    </div>
                                }
                            }
                        }
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-3">
                                <table class="table align-items-center justify-content-center mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width:10%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                                            <th style="width:25%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                            <th style="width:15%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Warehouse ID</th>
                                            <th style="width:15%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Warehouse</th>
                                            <th style="width:15%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Unit</th>
                                            @{
                                                if (User.Identity.IsAuthenticated)
                                                {
                                                    if (!User.IsInRole("Staff"))
                                                    {
                                                        <th style="width:30%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                                                    }
                                                }
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.WarehouseId)
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.Warehouse)
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.Unit)
                                                    </span>
                                                </td>
                                                @{
                                                    if (User.Identity.IsAuthenticated)
                                                    {
                                                        if (!User.IsInRole("Staff"))
                                                        {
                                                            <td>
                                                                <a class="card-title mt-2"><a asp-action="DeleteProduct" asp-route-id="@item.Id" type="button" class="btn btn-danger float-right"><i class="fa fa-trash"></i>  Delete </a></a>
                                                                <a class="card-title mt-2"><a asp-action="UpdateProduct" asp-route-id="@item.Id" type="button" class="btn btn-success float-right"><i class="fa fa-pen"></i>  Update </a></a>
                                                            </td>
                                                        }
                                                    }
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>